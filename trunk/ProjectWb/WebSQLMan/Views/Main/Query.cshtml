@model string

@(
 Html.X().Panel()
        //.ID("con")
.Header(false)
.Layout(LayoutType.Fit)
.Height(250)
.MaxHeight(400)
.Border(false)
.Items(
                    Html.X().Button()
                   .Text("Submit")
                   .Icon(Icon.Lightning)
                   .MaxHeight(30)
                   .MaxWidth(100)
                   .DirectEvents(de =>
                                      {
                                          de.Click.Url = Url.Action("Run", "Main");
                                          de.Click.ExtraParams.Add(new Parameter("query", "#{" + @Model + "}.getValue()", ParameterMode.Raw));
                                          de.Click.ExtraParams.Add(new { containerId = "ResultTabPanel" });
                                      }
                                    ),
                    Html.X().TextArea()
                    .Editable(true)
                    .ID(@Model)
                    .Border(false)
                    .Value(null))


)
