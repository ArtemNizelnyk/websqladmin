@model System.Data.DataSet
@using System.Data;

<div>
@foreach (DataTable dt in Model.Tables)
{
    

    @(
    
    Html.X().Panel()
    .Title(dt.TableName)
    .AutoRender(true)
    .Closable(true)
    .Region(Region.Center)
    .BodyPadding(10)
    .AutoScroll(true)
    .Items( Html.X().GridPanelFor<DataTable>(dt,true,true,true)
    
                .Title(dt.TableName)
                .AutoScroll(true)
                .LayoutConfig(new HBoxLayoutConfig { Align = HBoxAlign.StretchMax })
                .ForceFit(true)
                    .BottomBar(
                    Html.X().PagingToolbar()
                        .DisplayInfo(true)
                        .DisplayMsg("Displaying records {0} - {1} of {2}")
                        .EmptyMsg("No records to display")
                )

         )
    )
}   
</div>

