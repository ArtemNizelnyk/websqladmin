@model WebSQLMan.Models.ConnectionParams

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
   var  X = Html.X();
}



@(X.ResourceManager())
@(
 X.Window()
                .Title("Login")
                .Width(400)
                .Height(250)
                .Layout(LayoutType.Fit)
                .Closable(false)
                .Border(false)
                .Draggable(false)
                .Items(
                    Html.X().FormPanel()
                        .ID("LoginForm")
                        .Frame(true)
                        .DefaultAnchor("100%")
                        .BodyPadding(6)
                        .FieldDefaults(def =>
                        {
                            def.MsgTarget = MessageTarget.Side;
                        })
                        .Items(
                            Html.X().TextFieldFor(m => m.ServerName),
                            Html.X().TextFieldFor(m => m.DataBase),
                            Html.X().ComboBoxFor(m => m.Authentification),
                            Html.X().TextFieldFor(m => m.Login),
                            Html.X().TextFieldFor(m => m.Password)
                        )
                )
            .Buttons(
                    Html.X().Button().Text("Connect").DirectEvents(de => {
                                de.Click.Url = Url.Action("Connect");
                                de.Click.EventMask.ShowMask = true;
                                de.Click.FormID = "LoginForm";
                            })
            )
)
