@using WebSQLMan.SQL;


@{

    ViewBag.Title = "WebSqlAdministrator";
    var X = Html.X();
}

<link type="text/css" rel="stylesheet" href="http://speed.ext.net/www/intro/css/main.css" />

@(Html.X().ResourceManager())
@(X.Viewport() // main page view create
        .Layout(LayoutType.Border)
        .Items(
                    X.Toolbar()
                    .ID("ToolBar")
                    .Region(Region.North)
                    .Layout(LayoutType.Auto)
                    .StyleSpec("padding-bottom:0px")
                    .Items(

                    X.Button()
                    .ID("ConnectBtn")
                    .Icon(Icon.DatabaseConnect)
                            .ToolTip("New Connection")
                            .DirectEvents(de =>
                                    {
                                        de.Click.Url = Url.Action("Dissconnect", "Main");
                                    }),

                    X.Button()
                    .ID("RefreshBtn")
                    .Icon(Icon.DatabaseRefresh)
                            .ToolTip("Reconnect")
                            .DirectEvents(de =>
                                    {
                                        de.Click.Url = Url.Action("Dissconnect", "Main");
                                    }),

                    X.Button()
                    .ID("RunBtn")
                    .Icon(Icon.ScriptStart)
                    .ToolTip("Run query")
                    .DirectEvents(de =>
                                                          {
                                                              de.Click.Url = Url.Action("Run");
                                                              de.Click.ExtraParams.Add(new Parameter("query", "#{SQLComm}.getValue()", ParameterMode.Raw));
                                                              de.Click.ExtraParams.Add(new { containerId = "CenterResult" });
                                                          }

                                            ),

                    X.Button()
                    .ID("CreateNewBtn")
                    .Icon(Icon.New)
                    .ToolTip("New query"),

                    X.ToolbarFill(),

                    X.ToolbarSeparator(),

                    X.Button()
                    .ID("ExitBtn")
                    .Icon(Icon.Disconnect)
                    .ToolTip("Disconnect")
                    .DirectEvents(de =>
                            {
                                de.Click.Url = Url.Action("Dissconnect", "Main");
                                de.Click.Confirmation.ConfirmRequest = true;
                                de.Click.Confirmation.Title = "Выход";
                                de.Click.Confirmation.Message = "Вы уверены, что хотите выйти? Все измененные данные будут утеряны!";
                            })
                    ),

            X.Panel() //create Object browser
                .Title("Object Explorer")
                .Region(Region.West)
                .Layout(LayoutType.Accordion)
                .Width(225)
                .MinWidth(225)
                .MaxWidth(400)
                .AutoScroll(true)
                .Split(true)
                .Collapsible(true)
                .Items(
                    X.Panel()
                        .Title("Connection")
                        .Border(false)
                        .BodyPadding(6)
                        .Icon(Icon.DatabaseConnect)
                        .Html("Some Connections Here"),

                     X.Panel()
                        .ID("TreePanel")
                        .Title("Databases")
                        .Border(true)
                        .BodyPadding(6)
                        .Icon(Icon.Database)
                        .MaxHeight(400)
                        .Layout(LayoutType.Fit)
                        .Loader(
                        Html.X().ComponentLoader()
                        .Url(Url.Action("BasesTree"))
                        .Mode(LoadMode.Script)
                                .Params(new { containerId = "TreePanel" })
                          )


                     ),

            X.TabPanel() // create main view panel using grid
                .Region(Region.Center)
                .Items(
                    X.Panel()
                    .Title("Result")
                    .ID("CenterResult")
                    .Region(Region.Center)
                    .BodyPadding(10)
                    .Header(false)
                    .AutoScroll(true)


    ),

    X.Panel() //create right panel with 2 tabs for error or succces messages
    .Title("MessageBox")
    .Region(Region.East)
    .Collapsible(true)
    .Split(true)
    .MinWidth(225)
    .Width(225)
    .Layout(LayoutType.Fit)
    .Html("Now it's just panel, but will be somth like messagebox with error_messages or success")

    ,

    X.Panel() //down panel for queries
    .Title("new query")
    .ID("SQLcommandTab")
    .Region(Region.South)
    .Split(true)
    .Collapsible(true)
    .Height(150)
    .BodyPadding(6)
    .Layout(LayoutType.Fit)

                   .Items(
                    Html.X().Button()
                                    .Text("Submit")
                                    .Icon(Icon.Lightning)
                                    .FormBind(true)
                                    .MaxHeight(30)
                                    .MaxWidth(100)
                                    .DirectEvents(de =>
                                                        {
                                                            de.Click.Url = Url.Action("Run");
                                                            de.Click.ExtraParams.Add(new Parameter("query", "#{SQLComm}.getValue()", ParameterMode.Raw));
                                                            de.Click.ExtraParams.Add(new { containerId = "CenterResult" });

                                                        }

                                    )

                                            ,
                    X.TextArea()
                    .Editable(true)
                    .ID("SQLComm")
                    .Value(@ViewBag.Message)
                    .Width(400)
                                            )
    )
)



